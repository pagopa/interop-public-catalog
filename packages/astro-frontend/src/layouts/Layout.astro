---
import 'bootstrap-italia/dist/css/bootstrap-italia.min.css'
import '../style.css'

import Header from '../components/shared/Header/Header.astro'
import Footer from '../components/shared/Footer.astro'
import { getLangFromUrl } from '../i18n/utils.i18n'

const currentLocale = getLangFromUrl(Astro.url.pathname)
---

<!doctype html>
<html lang={currentLocale}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="sitemap" href="/sitemap.xml" />
    <meta name="generator" content={Astro.generator} />
    <title>Catalogo</title>
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>

<script>
  import { setupTracking } from '../utils/tracking.utils'
  import { Popover, Dropdown, Accordion } from 'bootstrap-italia'
  import { getLangFromUrl } from '../i18n/utils.i18n'
  import { ONETRUST_DOMAIN_SCRIPT_ID, MIXPANEL_PROJECT_ID } from '../config/constants'

  var popoverTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="popover"]'))
  popoverTriggerList.map(function (popoverTriggerEl) {
    return new Popover(popoverTriggerEl, {
      trigger: 'hover focus',
    })
  })

  var dropdownTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="dropdown"]'))
  dropdownTriggerList.map(function (dropdownTriggerEl) {
    return new Dropdown(dropdownTriggerEl)
  })

  var accordionTriggerList = [].slice.call(document.querySelectorAll('.accordion'))
  accordionTriggerList.map(function (accordionTriggerEl) {
    return new Accordion(accordionTriggerEl)
  })

  if (import.meta.env.PROD) {
    setupTracking({
      currentLocale: getLangFromUrl(window.location.pathname),
      oneTrustDomainScriptId: ONETRUST_DOMAIN_SCRIPT_ID,
      mixpanelProjectId: MIXPANEL_PROJECT_ID,
    })
  }
</script>
