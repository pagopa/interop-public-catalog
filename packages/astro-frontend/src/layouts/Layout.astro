---
import 'bootstrap-italia/dist/css/bootstrap-italia.min.css'
import 'typeface-titillium-web'
import 'typeface-roboto-mono'
import 'typeface-lora'
import '../style.css'

import Header from '../components/shared/Header/Header.astro'
import Footer from '../components/shared/Footer.astro'
import { getLangFromUrl } from '../i18n/utils.i18n'

const currentLang = getLangFromUrl(Astro.url.pathname)
---

<!doctype html>
<html lang={currentLang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Catalogo</title>
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>

{
  /* Popover initialization, see https://italia.github.io/bootstrap-italia/docs/componenti/popover/  */
}
<script>
  import { Popover } from 'bootstrap-italia'
  var popoverTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="popover"]'))
  popoverTriggerList.map(function (popoverTriggerEl) {
    return new Popover(popoverTriggerEl)
  })
</script>
