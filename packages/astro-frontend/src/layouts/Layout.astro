---
import 'bootstrap-italia/dist/css/bootstrap-italia.min.css'
import '../style.css'

import Header from '../components/shared/Header/Header.astro'
import Footer from '../components/shared/Footer.astro'
import { getLangFromUrl } from '../i18n/utils.i18n'
import { clientEnvConfig } from '../config/config'
import type { MetaDataType } from '../server/types/metaData.types'

type Props = {
  metaSettings: MetaDataType
}

const { metaSettings } = Astro.props

const currentLocale = getLangFromUrl(Astro.url.pathname)
---

<!doctype html>
<html lang={currentLocale}>
  <head>
    <meta charset="UTF-8" />
    <script
      is:inline
      set:html={`window.env = ${JSON.stringify(clientEnvConfig).replace(/</g, '\\u003c')}`}
    />
    {
      import.meta.env.PROD && (
        <script
          is:inline
          src="https://cdn.cookielaw.org/scripttemplates/otSDKStub.js"
          type="text/javascript"
          charset="UTF-8"
          data-domain-script={clientEnvConfig.onetrustDomainScriptId}
          data-language={currentLocale}
        />
      )
    }
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="sitemap" href="/sitemap.xml" />
    <meta name="generator" content={Astro.generator} />

    <title>{metaSettings.title}</title>
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={metaSettings.seo.metaTitle} />
    <meta name="twitter:description" content={metaSettings.seo.metaDescription} />
    <meta name="twitter:image" content={metaSettings.seo.twitterImage.url} />
    <meta property="og:locale" content={metaSettings.locale === 'it' ? 'it_IT' : 'en_US'} />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={metaSettings.seo.metaTitle} />
    <meta property="og:description" content={metaSettings.seo.metaDescription} />
    <!-- <meta property="og:url" content={/*TODO */} /> -->
    <meta property="og:site_name" content={'pagopa'} />
    <!-- TODO -->
    <meta property="og:image" content={metaSettings.seo.opengraphImage.url} />
    <link rel="canonical" href="https://www.example.com/sample-page/" />
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>

<script>
  import { initMixpanel } from '../utils/tracking.utils'
  import { initBootstrapItaliaComponents } from '../config/bootstrap-italia'

  /**
   * Initializes Bootstrap Italia components that require JavaScript to work.
   * E.g.: modals, dropdowns, tooltips, etc.
   */
  initBootstrapItaliaComponents()

  if (import.meta.env.PROD) {
    initMixpanel({ projectId: window.env.mixpanelProjectId })
  }
</script>
