---
import 'bootstrap-italia/dist/css/bootstrap-italia.min.css'
import '../style.css'

import Header from '../components/shared/Header/Header.astro'
import Footer from '../components/shared/Footer.astro'
import { getLangFromUrl } from '../i18n/utils.i18n'
import { getClientEnvConfig } from '../config/config'

const currentLang = getLangFromUrl(Astro.url.pathname)
const { onetrustDomainScriptId } = getClientEnvConfig()
---

<!doctype html>
<html lang={currentLang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="sitemap" href="/sitemap.xml" />

    <!-- ONE TRUST COOKIE -->
    {
      import.meta.env.PROD && (
        <Fragment>
          <script
            is:inline
            src="https://cdn.cookielaw.org/scripttemplates/otSDKStub.js"
            type="text/javascript"
            charset="UTF-8"
            data-language={currentLang}
            data-domain-script={onetrustDomainScriptId}
          />
          <script is:inline type="text/javascript">
            function OptanonWrapper() {}
          </script>
        </Fragment>
      )
    }
    <!-- END ONE TRUST COOKIE -->

    <meta name="generator" content={Astro.generator} />
    <title>Catalogo</title>
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>

{
  /* Popover initialization, see https://italia.github.io/bootstrap-italia/docs/componenti/popover/  */
}
<script>
  import { Popover, loadFonts, Dropdown, Accordion } from 'bootstrap-italia'
  var popoverTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="popover"]'))
  popoverTriggerList.map(function (popoverTriggerEl) {
    return new Popover(popoverTriggerEl, {
      trigger: 'hover focus',
    })
  })

  var dropdownTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="dropdown"]'))
  dropdownTriggerList.map(function (dropdownTriggerEl) {
    return new Dropdown(dropdownTriggerEl)
  })

  var accordionTriggerList = [].slice.call(document.querySelectorAll('.accordion'))
  accordionTriggerList.map(function (accordionTriggerEl) {
    return new Accordion(accordionTriggerEl)
  })

  loadFonts('/fonts')
</script>
