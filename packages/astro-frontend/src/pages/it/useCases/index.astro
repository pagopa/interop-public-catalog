---
import { Section } from '../../../components/shared/Section'
import { UseCasesCatalog } from '../../../components/UseCasesList/UseCasesCatalog'
import { getLangFromUrl } from '../../../i18n/utils.i18n'
import Layout from '../../../layouts/Layout.astro'
import PageLayout from '../../../layouts/PageLayout.astro'

const currentLocale = getLangFromUrl(Astro.url.pathname)
---

<Layout>
  <PageLayout
    title="Esempi pratici di utilizzo per il tuo ente"
    breadcrumbItems={[
      {
        routeKey: 'HOME',
      },
      {
        routeKey: 'USE_CASE_CATALOG',
        current: true,
      },
    ]}
  >
    <p class="lead" slot="bottom-hero">
      Scopri come integrare le API nei processi del tuo ente: lasciati ispirare da una raccolta di
      esempi significativi e semplici da replicare.
    </p>
  </PageLayout>

  <Section className="bg-muted">
    <UseCasesCatalog client:only="react" currentLocale={currentLocale} />
  </Section>
</Layout>
