---
import { Props as BootstrapItaliaIconProps } from '../shared/BootstrapItaliaIcon.astro'
import TooltipIcon from '../shared/TooltipIcon.astro'

interface Props {
  label: string
  content: string
  icon?: {
    iconName: BootstrapItaliaIconProps['name']
    tooltipTitle: string
    tooltipContent: string
  }
}

const { label, content, icon } = Astro.props
---

<div class="d-flex flex-row align-items-center">
  <span class="h6 mb-0 me-3">
    {label}
    {
      icon && (
        <TooltipIcon
          title={icon.tooltipTitle}
          content={icon.tooltipContent}
          iconName={icon.iconName}
          iconColor="primary"
        />
      )
    }
  </span>
  <span>{content}</span>
</div>
