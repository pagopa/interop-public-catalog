---
import { useHomepageTranslations } from '../../i18n/homepage.i18n'
import { useUiTranslations } from '../../i18n/ui.i18n'
import heroEServiceCardImage from '../../assets/images/hero-eservice-cards.png'
import heroBackgroundImage from '../../assets/images/hero-background.png'
import TooltipIcon from '../shared/TooltipIcon.astro'

const t = useHomepageTranslations(Astro.url.pathname)
const tUi = useUiTranslations(Astro.url.pathname)
---

<section id="hero" style="min-height: 560px;" class="it-hero-wrapper">
  <div class="img-responsive-wrapper">
    <div class="img-responsive">
      <div class="img-wrapper">
        <img src={heroBackgroundImage.src} alt="" role="presentation" width="1440" height="560" />
      </div>
    </div>
  </div>
  <div class="container position-relative">
    <div class="row flex-column-reverse flex-xl-row">
      <div class="col-12 col-xl-6">
        <div class="it-hero-text-wrapper">
          {/* HERO TITLE */}
          <h1>{t('title')}</h1>

          {/* HERO SUBTITLE */}
          <p class="d-none d-xl-block font-sans-serif">{t('subtitle')}</p>

          {/* HERO SEARCH */}
          <div
            id="hero-form-group"
            class="form-group rounded border border-white mb-4 overflow-hidden"
          >
            <div class="input-group">
              <label for="hero-form-input">{t('search_placeholder')}</label>
              <input
                type="text"
                class="form-control border-0"
                id="hero-form-input"
                name="hero-form-input"
              />
              <div class="input-group-append">
                <button id="hero-search-button" class="btn btn-primary" type="button" id="button-3"
                  >{tUi('actions.search')}</button
                >
              </div>
            </div>
          </div>

          {/* HERO FOOTER */}
          <p class="font-sans-serif">
            {t('info_link')}
            <TooltipIcon
              title={t('api_info.title')}
              content={t('api_info.content')}
              iconName="it-info-circle"
              iconColor="white"
            />
          </p>
        </div>
      </div>
      <div
        style="z-index: 1;"
        class="col-12 col-xl-6 d-flex align-items-center justify-content-center justify-content-xl-end"
      >
        <img
          class="img-fluid mt-4 pt-4 pt-xl-0 mt-xl-0"
          src={heroEServiceCardImage.src}
          alt=""
          role="presentation"
          width="432"
          height="400"
        />
      </div>
    </div>
    <div class="d-none d-xl-flex position-absolute bottom-0 end-0 p-4 text-white">
      <small class="d-flex align-items-center gap-3">
        <svg
          class="scroll-animation-icon"
          xmlns="http://www.w3.org/2000/svg"
          width="20"
          height="28"
          viewBox="0 0 20 28"
          fill="none"
        >
