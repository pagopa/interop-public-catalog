---
import { useUiTranslations } from "../../i18n/ui.i18n";
import { getLangFromUrl } from "../../i18n/utils.i18n";
import { BootstrapItaliaIcon } from "./BootstrapItaliaIcon";

const currentLocale = getLangFromUrl(Astro.url.pathname);
const tUi = useUiTranslations(currentLocale);
---

<a
  href="#"
  aria-label={tUi("back_to_top_button.aria_label")}
  data-bs-toggle="backtotop"
  class="back-to-top"
  id="backToTopButton"
>
  <BootstrapItaliaIcon name="it-arrow-up" color="light" />
</a>

<script>
  import { BackToTop } from "bootstrap-italia";

  const backToTopElement = document.getElementById("backToTopButton");
  new BackToTop(backToTopElement!);
</script>
