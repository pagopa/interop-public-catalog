---
import BootstrapItaliaIcon from './BootstrapItaliaIcon.astro'
import { useUiTranslations } from '../../i18n/ui.i18n'

interface Props {
  title: string
  category: string
  intendedTargets: string[]
}

const { title, category, intendedTargets } = Astro.props

const tUi = useUiTranslations(Astro.url.pathname)
---

<article
  style="padding:30px"
  class="it-card shadow border-bottom border-5 border-primary h-100 position-relative"
>
  {/* Bookmark Icon */}
  <div class="position-absolute top-0">
    <svg
      aria-hidden="true"
      xmlns="http://www.w3.org/2000/svg"
      width="32"
      height="56"
      viewBox="0 0 32 56"
      fill="none"
    >
      <path d="M32 55.2267L16 39.2267L0 55.2267V0H32V55.2267Z" fill="var(--bs-primary)"></path>
    </svg>
  </div>

  {/* Category Header */}
  <header class="d-flex justify-content-end align-items-center mb-4 py-4">
    <small class="text-secondary fw-semibold">{category}</small>
  </header>

  {/* Title */}
  <h3 style="max-width: 90%;" class="text-primary h4">{title}</h3>

  {/* Intended targets */}
  <footer class="d-flex justify-content-between align-items-center mt-4 py-2" style="gap: 42px;">
    <div class="d-inline-block text-truncate flex-shrink-1">
      <strong>{tUi('label.for')}: </strong>
      {intendedTargets.join(', ')}
    </div>
    <a
      href="#"
      class="it-card-link text-primary flex-shrink-0"
      aria-label={tUi('actions.learnMore') + ' ' + title}
    >
      {tUi('actions.learnMore')}
      <BootstrapItaliaIcon
        aria-hidden="true"
        name="it-arrow-right"
        size="sm"
        color="primary"
        padded
      />
    </a>
  </footer>
</article>
