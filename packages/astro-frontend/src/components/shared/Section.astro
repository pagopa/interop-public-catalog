---
import BootstrapItaliaIcon from './BootstrapItaliaIcon.astro'
import type { HTMLAttributes } from 'astro/types'

interface Props extends HTMLAttributes<'section'> {
  title: string
  titleClass?: string
  sectionLink?: { text: string; href: string }
}
const { title, sectionLink, titleClass, ...rest } = Astro.props
const randomId = Math.random().toString(36).substring(2, 15)
---

<section class:list={['section', rest.class]} {...rest} aria-labelledby={randomId}>
  <div class="section-content">
    <div class="container">
      <div class="row mb-3">
        <div class="col-12 d-xl-flex justify-content-between align-items-center">
          {/* Section Title */}
          <h2 class:list={['h3', titleClass]} id={randomId}>{title}</h2>
          {/* Section Link */}
          {
            sectionLink && (
              <small>
                <a href={sectionLink.href} class="text-uppercase fw-semibold">
                  {sectionLink.text}
                  <BootstrapItaliaIcon name="it-arrow-right" size="sm" color="primary" padded />
                </a>
              </small>
            )
          }
        </div>
      </div>
      <slot />
    </div>
  </div>
</section>
