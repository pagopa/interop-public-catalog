---
import BootstrapItaliaIcon, { Props as BootstrapItaliaIconProps } from './BootstrapItaliaIcon.astro'

interface Props {
  title: string
  content: string
  iconName: BootstrapItaliaIconProps['name']
  iconColor?: BootstrapItaliaIconProps['color']
  iconSize?: BootstrapItaliaIconProps['size']
  ariaLabel?: string
}

const { title, content, iconName, iconColor, iconSize = 'sm', ariaLabel = title } = Astro.props
---

<button
  type="button"
  class="btn btn-link p-0"
  data-bs-toggle="popover"
  data-bs-trigger="focus"
  data-bs-placement="bottom"
  data-bs-title={title}
  data-bs-content={content}
  aria-label={ariaLabel}
>
  <BootstrapItaliaIcon name={iconName} color={iconColor} size={iconSize} />
</button>
