{
  "private": true,
  "name": "root",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "start:astro-fe": "turbo start --filter pagopa-interop-public-astro-frontend",
    "start:strapi": "turbo start --filter pagopa-interop-public-strapi",
    "start:catalog-updater": "turbo start --filter pagopa-interop-public-catalog-updater",
    "test": "turbo test",
    "test:integration": "turbo test:integration",
    "test:api": "turbo test:api",
    "build": "turbo build",
    "check": "turbo check",
    "lint": "turbo lint -- --cache --cache-strategy content --cache-location .eslintcache",
    "lint:autofix": "turbo lint:autofix",
    "lint:openapi": "turbo lint:openapi",
    "format:check": "turbo format:check",
    "format:write": "turbo format:write",
    "infra:start": "./scripts/infra-start.sh",
    "infra:stop": "./scripts/infra-stop.sh",
    "infra:destroy": "./scripts/infra-destroy.sh",
    "prune-dist": "find . -name 'dist' -type d -exec rm -rf {} +",
    "prune-modules": "find . -name 'node_modules' -type d -exec rm -rf {} +"
  },
  "devDependencies": {
    "@tsconfig/strictest": "2.0.5",
    "@tsconfig/node-lts": "20.1.3",
    "turbo": "2.2.3",
    "@typescript-eslint/parser": "8.44.1",
    "@typescript-eslint/eslint-plugin": "8.44.1",
    "eslint-plugin-prettier": "5.5.4"
  },
  "config": {
    "protocVersion": "26.1"
  },
  "packageManager": "pnpm@9.15.9"
}
